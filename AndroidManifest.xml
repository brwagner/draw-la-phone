<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bwjfstudios.drawlaphone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.DrawLaPhoneApp"
        android:allowBackup="true"
        android:icon="@drawable/smile"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.login.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.signup.SignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.game.draw.DrawActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.host.HostActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.join.JoinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.game.write.WriteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.complete.CompleteGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.friends.FriendsActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>